@page "/"

@using Microsoft.AspNetCore.SignalR.Client

@inherits IndexBase

<PageTitle>Simple chat</PageTitle>

<header class="p-2 bg-secondary text-white text-center">
    <h6>Connection Id: @connectionId</h6>
</header>

<div class="container-fluid border mt-2 mb-2">
    <div class="row" style="height:100%">
        <div class="col-sm-4">

            <div class="row mt-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Member name (nick)" disabled="@isMemberLogon" @bind="memberLogin" />
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary form-control" disabled="@isMemberLogon" @onclick="MemberLogins">Login</button>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>Members</label>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col">
                    <select class="form-select" disabled="@(!isMemberLogon)" @onchange="SelectMemberParticipant">
                        <option value="0" selected disabled>Choose a member...</option>
                        @foreach (var member in allMembers)
                        {
                            <option value="@(member.Id)">@member.NickName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>Talks</label>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col">
                    <select class="form-select" disabled="@(!isMemberLogon)" @onchange="SelectTalkParticipant">
                        <option value="0" selected disabled>Choose a talk...</option>
                        @foreach (var talk in senderNonPrivateTalks)
                        {
                            <option value="@(talk.Id)">@talk.Name</option>
                        }
                    </select>
                    <label class="mt-2">Participants:</label>
                    <select class="form-select" size="8" disabled="@(!isMemberLogon)">
                        @foreach (var talkMember in talkMembers)
                        {
                            <option value="@(talkMember.Id)">@talkMember.NickName</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-sm-8">
            <div class="row mt-2">
                <div class="col-sm-10">
                    <input type="text" class="form-control mb-2" placeholder="Message" disabled="@(!isMemberLogon)" @bind="outputMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary form-control" disabled="@(!isMemberLogon)" @onclick="SendMessageButtonClick">Send</button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>To @participant.Name</label>
                    </div>
                </div>
            </div>
            <div class="container mt-2" style="height:450px;overflow-y:scroll">
                <div class="row">
                    <ul id="messagesList" class="mt-2" style="list-style:none;margin:auto;padding:0">
                        @foreach (var message in visibleMessages)
                        {
                            <li id="@(message.Id)" @onclick="@(() => OnMessageClick(message.Id))">
                                <p><b>@($"{message.Sender} ") </b>:@($" {message.Text} ")<sub><b>@message.Created.ToString()</b></sub></p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row mt-2 justify-content-center">
                <button name="PreviousPageButton" type="button" class="btn btn-primary mx-3 mb-2 d-inline w-25"
                        disabled="@(!pageHandler.IsPrevPageExists)" @onclick="@(PreviousPageButtonClick)">Previous (@(MESSAGES_ON_PAGE))</button>
                <button name="NextPageButton" type="button" class="btn btn-primary mx-3 mb-2 d-inline w-25"
                        disabled="@(!pageHandler.IsNextPageExists)" @onclick="@(NextPageButtonClick)">Next (@(MESSAGES_ON_PAGE))</button>
            </div>
            <div class="row mt-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control mb-2" placeholder="Edited message" disabled="@(!isSelectedOwnMessage)" @bind="editedMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isSelectedOwnMessage)" @onclick="UpdateMessageButtonClick">Update</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isSelectedOwnMessage)" @onclick="DeleteMessageButtonClick">Delete</button>
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control mb-2" placeholder="Answer message" disabled="@(!isSelectedNotOwnMessage)" @bind="answerMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isSelectedNotOwnMessage)"
                            @onclick="SendAnswerToOwnerButtonClick">Send to owner</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isSelectedNotOwnMessage)"
                            @onclick="SendAnswerToAllButtonClick">Send to all</button>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="p-2 bg-secondary text-white text-center">
    <h6>Connection Id: @connectionId</h6>
</footer>