@page "/"

@using Microsoft.AspNetCore.SignalR.Client

@inherits IndexBase

<PageTitle>Simple chat</PageTitle>

<header class="p-2 bg-secondary text-white text-center">
    <h3>Simple chat</h3>
    <h6>Connection Id: @connectionId</h6>
</header>

<div class="container-fluid border mt-2 mb-2">
    <div class="row" style="height:100%">
        <div class="col-sm-5">

            <div class="row mt-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Member name (nick)" disabled="@isMemberLogins" @bind="memberLogin" />
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary form-control" disabled="@isMemberLogins" @onclick="MemberLogins">Login</button>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>Members</label>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Member name (nick)" disabled="@(!isMemberLogins)" @bind="newMember" />
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary form-control" disabled="@(!isMemberLogins)" @onclick="AddNewMember">New member</button>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col">
                    <select class="form-select" disabled="@(!isMemberLogins)" @onchange="SelectMemberReceiver">
                        @foreach (var member in members)
                        {
                            <option value="@(member.Id)">@member.NickName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>Talks</label>
                    </div>
                </div>
            </div>

            <div class="row mt-2 mb-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control" placeholder="Talk name" disabled="@(!isMemberLogins)" @bind="newTalk" />
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-primary form-control" disabled="@(!isMemberLogins)" @onclick="AddNewTalk">New talk</button>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col">
                    <select class="form-select" disabled="@(!isMemberLogins)" @onchange="SelectTalkReceiver">
                        @foreach (var talk in talks)
                        {
                            <option value="@(talk.Id)">@talk.Name</option>
                        }
                    </select>
                    <label class="mt-2">Talk's members:</label>
                    <select class="form-select" size="8" disabled="@(!isMemberLogins)">
                        @foreach (var talkMember in talkMembers)
                        {
                            <option value="@(talkMember.Id)">@talkMember.NickName</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-sm-7">
            <div class="row mt-2">
                <div class="col-sm-10">
                    <input type="text" class="form-control mb-2" placeholder="Message" disabled="@(!isMemberLogins)" @bind="outputMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary form-control" disabled="@(!isMemberLogins)" @onclick="Send">@buttonName</button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="bg-secondary text-white text-center">
                        <label>To @receiver.Name</label>
                    </div>
                </div>
            </div>
            <div class="container mt-2" style="height:400px;overflow-y:scroll">
                <div class="row">
                    <ul id="messagesList" class="mt-2" style="list-style:none;margin:auto;padding:0">
                        @foreach (var message in messages)
                        {
                            <li id="@(message.Id)" @onclick="@(() => Edit(message.Id))">
                                <p><b>@($"{message.Sender} ") </b>:@($" {message.Text} ")<sub><b>@message.Created.ToString()</b></sub></p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row mt-2 justify-content-center">
                <button type="button" class="btn btn-primary mx-3 mb-2 d-inline w-25" disabled="@(buttonPreviousDisabled)" @onclick="@(() => PageButtonClick(PREVIOUS_PAGE))">Previous</button>
                <button type="button" class="btn btn-primary mx-3 mb-2 d-inline w-25" disabled="@(buttonNextDisabled)" @onclick="@(() => PageButtonClick(NEXT_PAGE))">Next</button>
            </div>
            <div class="row mt-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control mb-2" placeholder="Edited message" disabled="@(inputEditedMessage)" @bind="editedMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isMemberLogins)" @onclick="UpdateMessageClick">Update</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isMemberLogins)" @onclick="DeleteMessageClick">Delete</button>
                </div>
            </div>
            <div class="row my-2">
                <div class="col-sm-8">
                    <input type="text" class="form-control mb-2" placeholder="Answer message" disabled="@(inputAnswerMessage)" @bind="answerMessage" />
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isReceiverTalk)" @onclick="SendDirectClick">Send direct</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary w-100" disabled="@(!isReceiverTalk)" @onclick="SendToAllClick">Send to all</button>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="p-2 bg-secondary text-white text-center">
    <h3>Simple chat</h3>
    <h6>Connection Id: @connectionId</h6>
</footer>